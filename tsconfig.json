{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "module": "commonjs"
  }
}
